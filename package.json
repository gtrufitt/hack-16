{
  "name": "node-ws-test",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku-examples/node-ws-test.git"
  },
  "dependencies": {
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "express": "^4.4.5",
    "express-ws": "^1.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "sassify": "^1.0.0",
    "ws": "0.4.x"
  },
  "engines": {
    "node": "0.10.x"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ],
      "sassify"
    ]
  },
  "scripts": {
    "start": "node server/index.js",
    "build": "browserify client/main.js -o public/bundle.js",
    "preinstall": "mkdir -p public",
    "postinstall": "npm run build",
    "watch": "watchify client/main.js -v -o public/bundle.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0"
  }
}
